<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.extia.extiabox.MainActivity">

    <ImageView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/plan6"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/forthButton"
        android:layout_alignEnd="@+id/forthButton" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refreshText"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/forthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forthText"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/sixthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sixthText"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/forthButton"/>

    <View
        android:id="@+id/testScreen1"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="#888888" />

    <View
        android:id="@+id/testScreen2"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="#888888" />

    <View
        android:id="@+id/testScreen3"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="#888888" />

    <View
        android:id="@+id/testScreen4"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="#888888" />

    <View
        android:id="@+id/testScreen5"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="#888888" />

    <View
        android:id="@+id/testScreen6"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="#888888" />


</RelativeLayout>
